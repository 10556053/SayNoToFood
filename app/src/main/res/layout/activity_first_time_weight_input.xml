<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstTimeInput.FirstTimeWeightInput">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_bodyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="關於你:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="告訴我們您的身體狀況，為您貼身打造斷食計畫" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="537dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_gender"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="70dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/gender" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="84dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:text="您的性別"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_height"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/height" />

                        <TextView
                            android:id="@+id/tv_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:text="您的身高"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_age"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgage"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/old_man" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="84dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:text="您的年齡"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_waist_length"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/ruler" />

                        <TextView
                            android:id="@+id/tv_target_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="90dp"
                            android:layout_weight="1"
                            android:text="您的腰圍"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_target_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_weight"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/weighter" />

                        <TextView
                            android:id="@+id/tv_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:text="您的體重"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_body_fat"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_bodyfat"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/body_fat" />

                        <TextView
                            android:id="@+id/tv_body_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:text="您的體脂肪"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_body_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_active"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_active"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/sport" />

                        <TextView
                            android:id="@+id/tv_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="70dp"
                            android:text="每日活動量"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_show_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:gravity="clip_horizontal|center_horizontal"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/mybutton"
            android:text="下一步" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>