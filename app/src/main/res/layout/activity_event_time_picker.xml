<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FastEventScheduler.EventTimePicker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp">>

        <TextView
            android:id="@+id/tv_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="設定每日進食區間"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="625dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Mon"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Mon"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/mon" />

                        <TextView
                            android:id="@+id/tv_Mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期一" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Tue"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Tue"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/tue" />

                        <TextView
                            android:id="@+id/tv_Tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期二" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Wed"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Wed"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/wed" />

                        <TextView
                            android:id="@+id/tv_Wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期三" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Thu"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Thu"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/thu" />

                        <TextView
                            android:id="@+id/tv_Thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期四" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Fri"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Fri"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/fri" />

                        <TextView
                            android:id="@+id/tv_Fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期五" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Sat"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Sat"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/sat" />

                        <TextView
                            android:id="@+id/tv_Sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期六" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_Sun"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_Sun"
                            android:layout_width="74dp"
                            android:layout_height="78dp"
                            android:layout_margin="20dp"
                            app:srcCompat="@drawable/sun" />

                        <TextView
                            android:id="@+id/tv_Sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="星期天" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/bt_finished"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="center|right|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/alert_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="aight bitches lets get shit done">

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>